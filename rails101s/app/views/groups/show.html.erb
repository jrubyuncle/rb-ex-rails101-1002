<div class="col-md-12">
  <div class="group">
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
  </div>

  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>文章(posts)</th>
        <th>Author</th>
        <th colspan="2">Edit/Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td>[<%= post.user_id %>][<%= post.show_author_name %>]</td>
          <td>
            <% if post.editable_by?(current_user) %>
                <%= link_to("Edit", edit_group_post_path(post.group, post),
                            class: "btn btn-default btn-xs")%>
    
                <%= link_to('new post', new_group_post_path(@group) , class: "btn btn-    warning pull-right") %>    
    
                <%= link_to("Delete", group_post_path(post.group, post),
                            class: "btn btn-default btn-xs ", method: :delete,
                            data: { confirm: "Are you sure?" } )%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
