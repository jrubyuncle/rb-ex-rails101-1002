<div class="col-md-12">
  <h2 class="text-center"></h2>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Content</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Last Update</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= simple_format(post.content) %></td>
          <td><%= link_to("Edit", edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></td>
          <td><%= link_to("Delete", group_posts_path(post.group, post), method: :post, class: "btn btn-default btn-xs") %></td>
          <td><%= post.updated_at.to_s(:long) %></td>
        </tr>
      <% end %>
    </tbody>


  </table>

</div>
